<form action="/api/user/addUser" method = "POST">
    <div class="form-group">
    <br>
    <label for="imie">Name</label><br>
    <input type="text" class="form-control" id="name" name="name" required minlength="3" maxlength="45" placeholder="Enter Name">
</div>
<div class="form-group">
    <label for="nazwisko">Surname</label><br>
    <input type="text" class="form-control" id="surname" name="surname" required minlength="3" maxlength="45" placeholder="Enter Surname">
</div>
<div class="form-group">
    <label for="mail">E-Mail</label><br>
    <input type="email" class="form-control" id="email" name="email" required minlength="8" maxlength="50" 
    pattern=".+@+.+"
    title="example@example.com" placeholder="Enter E-Mail">
</div>
<div class="form-group">
    <label for="password">Password</label><br>
    <input type="password" class="form-control" id="password" name="password" required minlength="8" maxlength="32" placeholder="Enter Password">
</div>
<div class="form-group">
    <label for="repeatedPassword">Confirm Password</label><br>
    <input type="password" class="form-control" id="passwordConfirmed" name="passwordConfirmed" required minlength="8" maxlength="32" placeholder="Enter Password">
</div>
    <button type="submit" id="btn-register" class="btn">Register Now</button>
    <br><br>
    <a href="/" class="login">Already have Account? Back to Login Page</a>
</form>