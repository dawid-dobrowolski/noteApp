<div class="title">Update note</div>
                <div class="add_note_form">
                    <form action="/api/note/updateNote?note_id=<%= note[0].note_id %>" id="confirmationForm" name="confirmationForm" method = "POST">
                        <div class="form-group">
                            <br>
                            <input type="text" class="form-control" id="note_title" name="note_title" required value="<%= note[0].note_title%>" placeholder="Enter Note Title">
                        </div>
                        <label for="colorpicker" id="colorLabel">Pick note color:</label>
                        <div class="form-group" id="color_picker">
                            <input type="color" id="colorpicker" name="note_color" value=<%= note[0].note_color%>>
                        </div>
                        <div class="form-group" id="favorite_picker">
                            <label for="note_favorite" id="colorLabel">Favorite note:</label>
                            <input type="checkbox" id="note_favorite" name="note_favorite" value=1 <%= note[0].note_favorite == 1 ? 'checked' : ''%>>
                        </div>
                        <div class="form-group">
                            <!-- <input type="text" class="form-control2" id="text" name="text" required minlength="5" maxlength="32" placeholder="Enter content of the note"> -->
                            <textarea id="note_text" name="note_text" class="userInput" form="confirmationForm"><%= note[0].note_text%></textarea>
                        </div>
                            <div class="form-buttons">
                                <button type="submit" id="btn-register" class="btn-update">Update</button>
                                </form>
                                <form action="/api/note/deleteNote?note_id=<%= note[0].note_id %>" id="deleteForm" name="deleteForm" method = "POST">
                                    <button type="submit" id="btn-register" onclick="location.href='homepage'" class="btn-delete">Delete note</button>
                                </form>
                                
                                <button type="submit" id="btn-register" onclick="location.href='homepage'" class="btn-cancel">Cancel</button>
                            </div>
                </div>
            </div>